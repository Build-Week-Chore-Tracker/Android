<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ButtonStylesPrimaryColor" parent="AppTheme">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ButtonStylesSecondaryColor" parent="AppTheme">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>
